---
import NextJS from "./icons/NextJS.astro"
import VueJS from "./icons/VueJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Laravel from "./icons/Laravel.astro"

const TAGS = {
  VUEJS: {
    name: "Vue.js",
    class: "bg-black text-white",
    icon: VueJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },

  LARAVEL: {
    name: "Laravel ",
    class: "bg-[#003159] text-white",
    icon: Laravel,
  },
}
const PROJECTS = [
  {
    title: "vControl | Active Directory",
    description:
      "Sistema de administracion de accesos generales para el active directory",
    link: "#",
    github: "https://github.com/wilfredofermin/bscontrol",
    image: "/projects/vcontrol.webp",
    tags: [TAGS.VUEJS, TAGS.TAILWIND, TAGS.LARAVEL],
  },

  {
    title: "iqboost | Test",
    description:
      "Sistema de evaluacion test IQ",
    link: "https://iqboost.mobi/",
    github: "#",
    image: "/projects/iqboost.webp",
    tags: [TAGS.VUEJS, TAGS.TAILWIND],
  },
]

---

{
  PROJECTS.map(({ image, title, description, tags,link }) => (
    <article class="mb-8">
      <a href={link} target="_blank" class="text-2xl font-semiboldtext-yellow-400 mb-2">
        {title}
      </>
      <p class="text-lg mb-4 text-pretty text-white">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
